{
  "compilerOptions": {
    "target": "es2020",
    "allowJs": true,
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "rootDir": "lib",
    "outDir": "tmp/typings",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["lib"]
}
